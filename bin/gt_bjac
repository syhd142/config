#!/bin/bash
export PATH=.:/sbin:/usr/sbin:/usr/local/sbin:/usr/local/bin:/bin:/usr/bin:/usr/local/bin

###########################################################################
export LC_ALL="zh_CN.UTF-8"
BASE_DOMAIN="bjac.pdtv.it"
MAIN_DOMAIN="plat.bjac.pdtv.it"
clusters_confirm()
{
    read num
    if [ $num = "q" ]; then
        exit 0;
    fi
    CLUSTERS_ARR=(${CLUSTERS})
    if [[ $num =~ ^[0-9]+$ ]] ; then 
        echo "t${num}v.$MAIN_DOMAIN"
    else 
        echo "请输入正确的机器号,退出(q)"  
        clusters_confirm
    fi
	return 0;
}

if [[ $1 =~ ^[0-9]+$ ]] 
then 
    host="t$1v.$MAIN_DOMAIN"
elif [[ -n $1 ]]
then
    host="t$1v.$MAIN_DOMAIN"
else
    echo '
    ============ 服务器列表 ============ 
    t[2-11]v.plat.bjac.pdtv.it
    ';
    echo "输入t[?]v.${MAIN_DOMAIN}服务器编号: (退出:q)" 
    clusters_confirm
    host="t${num}v.$MAIN_DOMAIN"
fi
echo " Connecting $host ... "
ssh $host
